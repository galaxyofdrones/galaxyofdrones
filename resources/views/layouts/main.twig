{% extends 'layouts.base' %}

{% set title = setting('title') %}
{% block title %}{% if subtitle is defined %}{{ subtitle ~ ' - ' }}{% endif %}{{ title }}{% endblock %}

{% block head %}
    {% set description = setting('description') %}
    {% set author = setting('author') %}

    {% if description %}
        <meta name="description" content="{{ description }}">
    {% endif %}
    {% if author %}
        <meta name="author" content="{{ author }}">
    {% endif %}

    {% block og_title %}
        <meta property="og:title" content="{{ title }}">
    {% endblock %}
    {% block og_type %}
        <meta property="og:type" content="website">
    {% endblock %}
    {% block og_url %}
        <meta property="og:url" content="{{ route('home') }}">
    {% endblock %}
    {% block og_image %}
        <meta property="og:image" content="{{ asset('images/og-website.png') }}">
        <meta property="og:image:width" content="1200">
        <meta property="og:image:height" content="630">
    {% endblock %}
    {% block og_description %}
        <meta property="og:description" content="{{ description ?: title }}">
    {% endblock %}

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}

{% block stylesheets %}
    <link href="{{ mix('css/app.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script src="{{ mix('js/app.js') }}"></script>
    <script>
        var Translations = {
            error: {
                whoops: '{{ trans('messages.error.whoops') }}',
                wrong: '{{ trans('messages.error.wrong') }}'
            }
        };
    </script>
{% endblock %}
